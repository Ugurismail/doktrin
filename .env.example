# ==============================================================================
# DEVELOPMENT .env EXAMPLE
# ==============================================================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun
# Komut: cp .env.example .env
# ==============================================================================

# Django Core Settings
DEBUG=True
SECRET_KEY=django-insecure-development-key-change-in-production-min-50-chars
ALLOWED_HOSTS=localhost,127.0.0.1

# Site URL (Email'lerde kullanılır)
SITE_URL=http://localhost:8000

# Database Settings (Development: SQLite | Production: PostgreSQL)
USE_POSTGRESQL=False

# PostgreSQL ayarları (Production için)
# USE_POSTGRESQL=True
# DB_NAME=doktrin_db
# DB_USER=doktrin_user
# DB_PASSWORD=your-strong-database-password
# DB_HOST=localhost
# DB_PORT=5432

# Email Configuration (Gmail)
# Gmail App Password almak için: https://myaccount.google.com/apppasswords
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-16-digit-app-password-here

# ==============================================================================
# PRODUCTION .env EXAMPLE
# ==============================================================================
# Production sunucuda kullanmak için aşağıdaki ayarları değiştirin:
#
# DEBUG=False
# SECRET_KEY=<50+ karakter rastgele güçlü key>
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,server-ip
# SITE_URL=https://yourdomain.com
# USE_POSTGRESQL=True
# DB_NAME=doktrin_db
# DB_USER=doktrin_user
# DB_PASSWORD=<güçlü-veritabanı-şifresi>
# DB_HOST=localhost
# DB_PORT=5432
# ==============================================================================
